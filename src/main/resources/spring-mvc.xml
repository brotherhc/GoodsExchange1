            path="${adminPath}/oa/oaNotify/self/count"/> -->
		<bean class="com.fafukeji.common.persistence.interceptor.LogInterceptor" />
	</mvc:interceptor>

	<mvc:interceptor>
		<mvc:mapping path="${adminPath}/**" />
		<mvc:mapping path="${userPath}/**" />
		<bean class="com.fafukeji.common.persistence.interceptor.UserSecurityInterceptor">
			<property name="excludedUrls">
